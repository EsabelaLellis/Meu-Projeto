programa
{
	inclua biblioteca Matematica --> mat
	
	funcao inicio ()
	{
		real n1, n2, n3, n4, media, total
		inteiro corte
		
		escreva ("Informe a nota de corte: ")
		leia (corte)

		escreva ("Informe a nota 1: " )
		leia (n1)
		escreva( "Informe a nota 2: ")
		leia (n2)
		escreva ("Informe a nota 3: ")
		leia (n3)
		escreva ("Informe a nota 4: ")
		leia (n4)

			total = (n1 + n2 + n3 + n4)
			escreva("\n\nSeu total ", total)
		media = (n1 + n2 + n3 + n4) / 4 
			escreva("\nMedia: ", media )
		


		se (media < corte)
		{ 
			escreva ("\nReprovado") 
		}senao{
			escreva ("\nAprovado")
		}		
	}
}
